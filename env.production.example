# Configuración para producción en new.gestion.carlos-herrera-consulting

APP_NAME="Dolibarr Modern Frontend"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://new.gestion.carlos-herrera-consulting

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos - Configurar según tu servidor
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=dolibarr_modern_frontend
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Sesiones
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.carlos-herrera-consulting
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=dmf_

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email - Configurar según tu servidor SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.carlos-herrera-consulting
MAIL_PORT=587
MAIL_USERNAME=noreply@carlos-herrera-consulting
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@carlos-herrera-consulting"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (si usas S3 para archivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Configuración de Dolibarr API
DOLIBARR_BASE_URL=https://gestion.carlos-herrera-consulting/api/index.php
DOLIBARR_API_KEY=your-production-dolibarr-api-key

# CORS y Frontend
FRONTEND_URL=https://new.gestion.carlos-herrera-consulting
SANCTUM_STATEFUL_DOMAINS=new.gestion.carlos-herrera-consulting,gestion.carlos-herrera-consulting

# Configuraciones de seguridad adicionales
FORCE_HTTPS=true
SECURE_COOKIES=true
